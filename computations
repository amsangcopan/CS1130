  <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="ftm">
    <h2 class="w3-text-light-grey">FEET TO METERS</h2>
        <br>
        <br><br>
        <label for="feet1">FEET:</label>
        <input id="feet1" type="number">
        <br><br>
        <button onclick="computefeettometers()">Compute</button> <br>
        <button onclick="clearvalues1()">Clear</button>
        <br>
        <br>
    <label for="meters1">METERS:</label>
    <input id="meters1" type="number" readonly>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <script>

    function computefeettometers(feet1)
    {
        
        var meters1, feet1;

        feet1 = document.getElementById("feet1").value*1;

        meters1 = feet1 * 0.3048
        document.getElementById("meters1").value = meters1;

    }

    function clearvalues1()
    {

       feet = document.getElementById("feet1").value = '';
        document.getElementById("meters1").value = '';

    }
        </script>
    
  <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="mtf">
    <h2 class="w3-text-light-grey">METERS TO FEET</h2>
        <br>
        <br>
        
        <label for="meters">METERS:</label>
        <input id="meters" type="number">
        <br><br>
        <button onclick="computemeterstofeet()">Compute</button>
        <button onclick="clearvalues()">Clear</button>
        <br><br>

    <label for="feet">FEET:</label>
    <input id="feet" type="number" readonly>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <script>

    function computemeterstofeet(meters)
    {
        
        var meters, feet;

        meters = document.getElementById("meters").value*1;

        feet = meters * 3.28084
        document.getElementById("feet").value = feet;

    }

    function clearvalues()
    {

       meters = document.getElementById("meters").value = '';
        document.getElementById("feet").value = '';

    }
        </script>

  <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="ctf">
    <h2 class="w3-text-light-grey">CELSIUS TO FAHRENHEIT</h2>
        <br>
        <br>
        
        <label for="cel">Enter temperature in celsius:</label>
        <input id="cel" type="number">
        <br><br>
        <button onclick="computeceltofahr()">Compute fahrenheit</button><br>
        <button onclick="clearvalues()">Clear</button>
        <br>

    <label for="fahr">Fahrenheit value is:</label>
    <input id="fahr" type="number" readonly>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <script>
    function computeceltofahr(cel)
    {
        
        var fahr, cel;

        cel = document.getElementById("cel").value*1;

        fahr = (cel * 9/5) + 32
        document.getElementById("fahr").value = fahr;

    }

    function clearvalues()
    {

       cel = document.getElementById("cel").value = '';
        document.getElementById("fahr").value = '';

    }
        </script>

  <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="ftc">
    <h2 class="w3-text-light-grey">FAHRENHEIT TO CELSIUS</h2>
        <br>
        <br>
        
        <label for="fahr">Enter temperature in fahrenheit:</label>
        <input id="fahr" type="number">
        <br><br>
        <button onclick="computefahrtocel()">Compute Celsius</button><br>
        <button onclick="clearvalues()">Clear</button>
        <br>

    <label for="celsius">celsius value is:</label>
    <input id="celsius" type="number" readonly>

    <br>
    <br>
    <br>
    <script>

    function computefahrtocel(fahr)
    {
        
        var fahr, celsius;

        fahr = document.getElementById("fahr").value*1;

        celsius = (5/9*(fahr-32));
        document.getElementById("celsius").value = celsius;

    }

    function clearvalues()
    {

       fahr = document.getElementById("fahr").value = '';
        document.getElementById("celsius").value = '';

    }
        </script>
